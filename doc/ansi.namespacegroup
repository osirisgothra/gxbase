				<tr width="100%">linewrap [on|off]</tr>
				<tr width="100%">default</tr>
				<tr width="100%">foreground [black|blue|green|cyan|red|magenta|yellow|white|default]</tr>
				<tr width="100%">background [black|blue|green|cyan|red|magenta|yellow|white|default]</tr>
				<tr width="100%">ulcolor [black|grey|blue|green|cyan|red|magenta|yellow|white]</tr>
				<tr width="100%">ulcolor [bright blue|green|cyan|red|magenta|yellow|white]</tr>
				<tr width="100%">hbcolor [black|grey|blue|green|cyan|red|magenta|yellow|white]</tr>
