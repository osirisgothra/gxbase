#!/bin/bash
#
# bash-vars
#
# various (non-prompt) variables you may want to set or have set
#
#
if [[ $1 == "force" ]] || [[ -z $GXBASE_RES_BASHVARS ]]; then
export GXBASE_RES_BASHVARS+=DEFINED

	# GXBASE_ROOT
        #  v--   1 for "bash-vars" in BASH_SOURCE, 2: for "res" in $GXBASE_ROOT/res
	[[ -z $GXBASE_ROOT ]] && export GXBASE_ROOT="$(readlink -m $BASH_SOURCE/../..)"

	# typical variable declarations
	[[ $1 == "force" ]] && echo "BASIC VARIABLES ADDING..."
	export XINIT_MODE=xinit
	export XINIT_DEVICE=":$(ps avfx -e | grep 'X .*[:][0-9] ' --count)"
	export XINIT_VT=vt12
	export HISTCONTROL=ignoreboth
	export HISTSIZE=1000
	export HISTFILESIZE=2000
	export LESSOPEN="| /usr/bin/lesspipe %s";
	export LESSCLOSE="/usr/bin/lesspipe %s %s";
	export PS1='$(_PS1)' 
	export PS2="cont'd>"  # removed, until bash bug resolved (bash crashes during line edit when eval '$(_PS2)' and Ctrl+D is pressed (is/or EOF))
	export PS3='Select:'  # removed, bash refuses to eval $(_PS3) 

	# each 1st line contains an embedded conditional, only use : when already not zero length!!

	# PATH Extras
	[[ $1 == "force" ]] && echo "PATH EXTRAS ADDING..."
	PATH="$GXBASE_ROOT/bin${PATH+:}$PATH"
	PATH="$GXBASE_ROOT/bin/extras:$PATH"
	PATH="$GXBASE_ROOT/res:$PATH"
	PATH="$GXBASE_ROOT:$PATH"

	# LIBPATH Extras
	LD_LIBRARY_PATH="$GXBASE_ROOT/lib"${LD_LIBRARY_PATH+:}$LD_LIBRARY_PATH

	# create variables that are expected
	# (usually already there, but some programs like to mess with them)
	[[ $1 == "force" ]] && echo "LD LIBRARY PATHS..."
	# COPT:no_ld_library_path_set  comment this out if you have problems or don't require libraries
	export LD_LIBRARY_PATH="/usr/lib:/usr/lib/x86_64-linux-gnu/:/lib:/lib/x86_64-linux-gnu/:/usr/local/lib:/lib64:/lib/i386-linux-gnu/:/usr/lib/i386-linux-gnu:$LD_LIBRARY_PATH"
	if (declare -p HOME | grep -q -- -rx); then
		echo "Note: HOME/USERNAME/GROUP set already made readonly (probably by this or a similar script)."
	else
		export HOME=~
		export USERNAME="$(id -un)"
		export GROUP=$(id -gn)
	fi

	if [[ -z $GROUPS ]]; then 
		echo "warning: GROUPS not set, user group information is needed by some programs. They may not work properly."
	fi
	# removed GROUPS because of slowdown problems introduced by it, and since it never seems to get unset
	# ny anyone, it has been removed (you can always put it in here yourself)
	[[ $1 == "force" ]] && echo "LS COLORS ADDING (defaults)..."
	export LS_COLORS="rs=0:di=01;34:ln=01;36:mh=00:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:su=37;41:sg=30;43:ca=30;41:tw=30;42:ow=34;42:st=37;44:ex=01;32:*.tar=01;31:*.tgz=01;36:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.lzma=01;31:*.tlz=01;31:*.txz=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.dz=01;31:*.gz=01;36:*.lz=01;31:*.xz=01;31:*.bz2=01;31:*.bz=01;31:*.tbz=01;31:*.tbz2=01;31:*.tz=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.war=01;31:*.ear=01;31:*.sar=01;31:*.rar=01;31:*.ace=01;31:*.zoo=01;31:*.cpio=01;31:*.7z=01;31:*.rz=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.svg=01;35:*.svgz=01;35:*.mng=01;35:*.pcx=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.m2v=01;35:*.mkv=01;35:*.webm=01;35:*.ogm=01;35:*.mp4=01;35:*.m4v=01;35:*.mp4v=01;35:*.vob=01;35:*.qt=01;35:*.nuv=01;35:*.wmv=01;35:*.asf=01;35:*.rm=01;35:*.rmvb=01;35:*.flc=01;35:*.avi=01;35:*.fli=01;35:*.flv=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.yuv=01;35:*.cgm=01;35:*.emf=01;35:*.axv=01;35:*.anx=01;35:*.ogv=01;35:*.ogx=01;35:*.aac=00;36:*.au=00;36:*.flac=00;36:*.mid=00;36:*.midi=00;36:*.mka=00;36:*.mp3=00;36:*.mpc=00;36:*.ogg=00;36:*.ra=00;36:*.wav=00;36:*.axa=00;36:*.oga=00;36:*.spx=00;36:*.xspf=00;36"
  unset TMOUT IFS

	# protect some variables that should never change

	declare -rx HOME USERNAME GROUP GROUPS
	[[ $1 == "force" ]] && echo "LS COLORS ADDING (extras)..."

	export LS_COLORS="${LS_COLORS}:*.none=01;30:*.cpp=01;35:*.h=0;35:*.pro=1;32:*.ui=0;32:*.user=1;36"

  [[ $1 == "force" ]] && { echo "LS_COLORS = $LS_COLORS"; return $?; }

else

	logger "$BASH_SOURCE: Already defined when called"

fi

