eval `resize` 
function  separator() { for ((i=0;i<$COLUMNS;i++)); do printf "-"; done; printf "\n"; }
[ -z "$1" ] && echo -e "System Paths"
[ -z "$1" ] && separator
[ -z "$1" ] && echo -e "\tMain Path"
[ -z "$1" ] && echo -e "\t\t$PATH" || echo -e "$PATH"
[ -z "$1" ] && echo -e "\tManpages"
[ -z "$1" ] && echo -e "\t\t`manpath`" || manpath
[ -z "$1" ] && echo -e "\tBash"
[ -z "$1" ] && echo -e "\t\t$BASH_VERSION $BASH_ALIASES"
[ -z "$1" ] && separator
unset separator
