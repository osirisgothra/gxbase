#!/usr/bin/perl -w

use warnings;
use strict;

use POE::Component::Curses;
use Curses::Toolkit::Widget::Window;
use Curses::Toolkit::Widget::Button;
use Curses::Toolkit::Widget::Border;
use Curses::Toolkit::Widget::Bin;
use Curses::Toolkit::Widget::Container;
use Curses::Toolkit::Widget::Entry;
use Curses::Toolkit::Widget::GenericButton;
use Curses::Toolkit::Widget::HBox;
use Curses::Toolkit::Widget::HPaned;
use Curses::Toolkit::Widget::HProgressBar;
use Curses::Toolkit::Widget::HScrollBar;
use Curses::Toolkit::Widget::Label;
use Curses::Toolkit::Widget::Paned;
use Curses::Toolkit::Widget::ProgressBar;
use Curses::Toolkit::Widget::ScrollArea;
use Curses::Toolkit::Widget::ScrollBar;
use Curses::Toolkit::Widget::VBox;
use Curses::Toolkit::Widget::VPaned;
use Curses::Toolkit::Widget::VProgressBar;
use Curses::Toolkit::Widget::VScrollBar;
use Curses::Toolkit::Widget::Window::Dialog::About;


# create the root window

my $root = POE::Component::Curses->spawn();
# adds some widget
$root->add_window(
		my $window = Curses::Toolkit::Widget::Window
			->new()
			->set_name('main_window')
			->add_widget(
				my $button = Curses::Toolkit::Widget::Button
					->new_with_label('Exit')
					->set_name('btn_close')
					->signal_connect(clicked => sub { exit(0); })
			 ->add_widget(


			)




			->set_coordinates( x1 => '20%',   y1 => '20%',
												 x2 => '80%',   y2 => '80%', )


);

POE::Kernel->run();







