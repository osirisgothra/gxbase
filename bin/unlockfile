#!/bin/bash

if sudo stat $1 --format='%a %N' > /tmp/restorelock; then
	if sudo chmod 777 $1; then
		cat /tmp/restorelock >> ~/.restorelockrc
		echo "unlocked."
		echo "there are now $(cat /tmp/restorelock | grep --count ".*") filesystem object(s) unlocked"
		echo "Use \"unlockfile undo\" to restore them."		
	else
		sudo chmod  "$1"
		echo "unlock failed (stat the same)"
	fi
fi
