#!/usr/bin/perl

use warnings;
use strict;
use v5.18;
use File::Temp qw ! tempfile !;
use Path::Class::Dir

my $searchpath = split(":",$ENV{PATH});
my $doc = `perlhelp --no @ARGV`;


if ($? == 0) {
   my ($fh,$tempfile) = tempfile();
   print $fh $doc;
   close $fh;
   system("komodo",$tempfile) or die "Error launching komodo $! - $?";
}





