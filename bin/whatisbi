#!/bin/bash
if [[ $1 ]] && [[ $1 != --help ]] && (help $1 > /dev/null 2>&1); then
	echo -ne "$1 - "
	help $1 | grep ".*" --max-count=2 | grep "^\s*[A-Z].*$" | tr -s ' \t' | grep "[A-Z].*$" -o
else
	if [[ $1 ]] && [[ $1 != --help ]]; then
		echo "Command $1 not found."
	else
		echo "whatisbi - the whatis command for builtin commands"
		echo "syntax: whatisbi [builtin command] [--help]"
	fi
fi
