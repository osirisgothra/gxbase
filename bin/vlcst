# getinput "question-text" "ylabel" "nlabel" "
   
echo -ne "Start time (Minutes):"
read MINS
echo -ne " (Seconds):"
read SECS
echo -e "Stop time (Minutes):"
read SMINS
echo -ne " (Seconds):"
read SSECS
if [[ -z $* ]]; then
	echo -e "Extra Params [2 seconds]:"
	TMOUT=2
	read EXTRAS
	unset TMOUT
else
	EXTRAS="$*"
fi

# start vlc
ST=$[ MINS * 60 + SECS ];               











